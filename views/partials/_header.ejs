<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse container-fluid" id="navbarNavAltMarkup">

      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user) { %>
        <div>
          <form action="/logout" method="POST">
          <b>
            Logged in as: 
            <%= user.email%>
          </b>
          <button class="btn btn-outline-warning ml-5">Logout</button>
          </form>
        </div>
        <% }else{ %>
          <form action="/login" method="POST">
            <div class=" form-inline mb-2 ">
              <input class = "form-control" name="userEmail" type="email" placeholder="Email" style="width: 300px; margin: 1em" required />
              <label><button class="btn btn-outline-dark">Login</button></label>
              
            </div>
          </form>
          
          <form action = "/register"><label><button class="btn btn-outline-dark">Sign Up</button></label></form>
          <% } %>

    </div>
  </nav>
</header>