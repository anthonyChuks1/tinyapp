<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse container-fluid" id="navbarNavAltMarkup">

      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(!user) { %>
        <div class="form-inline ">
          <form action="/login" method="GET">
            <label>
              <button class="btn btn-outline-dark">Login</button>
            </label>
          </form>

          <form action="/register" method="GET" class="ml-3">
            <label>
              <button class="btn btn-outline-dark">Register</button>
            </label>
          </form>

        </div>
        
        <% }else{ %>
          <div>
            <form action="/logout" method="POST">
              <b>
                Logged in as:
                <%= user.email%>
              </b>
              <button class="btn btn-outline-warning ml-5">Logout</button>
            </form>
          </div>
          
          <% } %>

    </div>
  </nav>
</header>