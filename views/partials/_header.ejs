<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse container-fluid" id="navbarNavAltMarkup">

      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(username) { %>
        <div>
          <form action="/logout" method="POST">
          <b>
            Logged in as: 
            <%= username %>
          </b>
          <button class="btn btn-outline-warning ml-5">Logout</button>
          </form>
        </div>
        <% }else{ %>
          <form action="/login" method="POST">
            <div class="form-group mb-2 ">
              <input name="username" type="text" placeholder="Username" style="width: 300px; margin: 1em" />
              <label><button class="btn btn-outline-dark">Login</button></label>
            </div>
          </form>
          <% } %>

    </div>
  </nav>
</header>